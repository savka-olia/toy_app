<p id="notice"><%= notice %></p>

<h1 class="mx-auto text-monospace text-center">Microposts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost, class:"btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost), class:"btn btn-link" %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="d-flex justify-content-center">
  <%= link_to 'New Micropost', new_micropost_path, class:"btn btn-light text-decoration-none" %>
</div>
